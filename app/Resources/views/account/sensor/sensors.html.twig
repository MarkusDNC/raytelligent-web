{% extends ':account:base.html.twig' %}

{% block body %}
    <div class="x_panel">
        <div class="x_title">
            <h2>Sensors </h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            {% if sensors is empty or sensors is null %}
                <div class='text-center'><strong> No sensors found </strong> </div>
            {% else %}
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Sensor</th>
                    <th>Name</th>
                    <th>Remove sensor</th>
                </tr>
                </thead>
                <tbody>
                {% for sensor in sensors %}
                <tr>
                    <td>{{ sensor.id }}</td>
                    <td>{{ sensor.name }}</td>
                    {% if sensor.application is null %}
                    <td class="text-center">
                        <a id="remove-sensor" class="btn btn-warning btn-xs" href='{{ path('account_remove_sensor', {'id': sensor.id})}}'><i class="fa fa-trash"></i></a>
                    </td>
                    {% else %}
                        <td class="text-center">
                           Your sensor is currently used in an application.
                        </td>
                    {% endif %}
                </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>
    </div>
{% endblock %}


